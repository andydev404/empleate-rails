<% content_for(:title) do %>
  Empleate | <%= @job.title %>
<% end %>

<%= render '/shared/header', hide_search_form: true %>

<section class=" max-w-screen-lg px-8 lg:px-0 py-24 lg:space-x-8 mx-auto flex items-start flex-col lg:flex-row">
  <div class="flex-1 w-full">
    <%= image_tag @job.account.cover_image.url, alt: 'cover image', class: 'h-52 rounded-t rounded-b-none w-full object-cover object-center' %>
    <div class="flex items-start bg-light-primary px-4 py-8">
      <%= image_tag @job.account.logo.url, alt: @job.account.display_name, class: 'h-28 rounded w-28 object-cover object-center' %>
      <div class="ml-5">
        <h2 class="text-xl text-dark font-bold leading-6"><%= @job.title %></h2>
        <h3 class="tracking-widest text-primary"><%= @job.account.display_name %></h3>
        <div class="text-sm flex items-center flex-wrap text-light-dark mt-4">
          <div class="flex items-center space-x-1 mr-2 lg:mr-5">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 text-light-dark"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                strokeWidth={2}
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              />
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                strokeWidth={2}
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
              />
            </svg>
            <span><%= @job.province.title %></span>
          </div>
          <div class="flex items-center space-x-1">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 text-light-dark"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                strokeWidth={2}
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              />
            </svg>
            <span><%= @job.created_at.strftime("%d-%m-%Y") %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-10">
      <h2 class="font-bold text-xl mb-5">Descripción</h2>
      <div>
        <%= @job.description %>
      </div>
    </div>
  </div>
  <div class="w-full mt-10 lg:mt-0 lg:w-80 space-y-5 lg:sticky top-5">
    <div class="rounded-lg border border-gray-100 px-4 py-5 bg-light-primary">
      <h3 class="font-medium text-lg">Compañia</h3>
      <ul class="mt-5 text-light-dark text-sm space-y-4">
        <% if @job.account.website.present? %>
        <li class="border-b border-dashed pb-1 flex items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-light-dark mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              strokeLinecap="round"
              strokeLinejoin="round"
              strokeWidth={2}
              d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
            />
          </svg>
          <span><%= @job.account.website %></span>
        </li>
        <% end %>
        <% if @job.account.address.present? %>
          <li class="border-b border-dashed pb-1 flex items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-light-dark mr-2"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                strokeWidth={2}
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              />
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                strokeWidth={2}
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
              />
            </svg>
            <span class="flex-1"><%= @job.account.address %></span>
          </li>
        <% end %>
        <li class="border-b border-dashed pb-1 flex items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-light-dark mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              strokeLinecap="round"
              strokeLinejoin="round"
              strokeWidth={2}
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            />
          </svg>
          <span class="flex-1"><%= @job.account.email %></span>
        </li>
      </ul>
      <%= link_to 'Ver más empleos de la compañía', company_jobs_path(@job.account.slug), class: 'mt-5 text-sm text-primary hover:text-dark-primary transition-colors'  %>
    </div>
    <div class="rounded-lg border border-gray-100 px-4 py-5 bg-light-primary text-center">
      <h3>Comparte esta oferta</h3>
      <div class="flex items-center justify-center space-x-5 mt-3">
        <a href="#" class="w-10 hover:opacity-80 transition-opacity">
          <img src="https://img.icons8.com/fluent/50/000000/facebook-new.png" />
        </a>
        <a href="#" class="w-10 hover:opacity-80 transition-opacity">
          <img class="w-10" src="https://img.icons8.com/fluent/48/000000/twitter.png" />
        </a>
        <a href="#" class="w-10 hover:opacity-80 transition-opacity">
          <img class="w-10" src="https://img.icons8.com/color/48/000000/linkedin.png" />
        </a>
      </div>
    </div>
    <% if account_signed_in? && @job.account == current_account %>
      <div>
        <%= link_to 'Editar vacante', job_edit_path(@job), class: 'mt-8 w-full flex items-center justify-center text-center bg-white text-primary items-center h-12 py-1 px-4 rounded-lg hover:bg-primary hover:text-white border border-primary transition-colors' %>
        <%= button_to 'Eliminar vacante', 
            job_delete_path(@job),
            method: :delete,
            form: { data: { turbo_confirm: '¿Seguro que deseas borrar esta vacante?' } },
            class: 'mt-8 w-full text-center bg-white text-red-500 items-center h-12 py-1 px-4 rounded-lg hover:bg-red-500 hover:text-white border border-transparent hover:border-red-500 transition-colors'
        %>
      </div>
    <% end %>
  </div>
</section>

<%= render '/shared/footer' %>