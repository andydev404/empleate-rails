<section class="flex flex-col md:flex-row h-screen items-center">

  <div class="bg-primary hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
    <div class="absolute text-white top-7 left-7">
      <%= link_to root_path, class: 'font-bold text-xl' do %>
        Empleate<span class="text-primary">.</span>
      <% end %>
    </div>
    <img src="https://images.pexels.com/photos/6231722/pexels-photo-6231722.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="" class="w-full h-full object-cover">
  </div>

  <div class="bg-white pb-11  w-full md:max-w-md lg:max-w-full md:mx-auto md:w-1/2 xl:w-1/3 lg:h-screen px-6 lg:px-16 xl:px-12 flex items-center justify-center">
    <div class="w-full h-100">
      <div class="block lg:hidden mb-11 mt-5">
        <%= link_to root_path, class: 'font-bold text-xl' do %>
          Empleate<span class="text-primary">.</span>
        <% end %>
      </div>
      <h1 class="font-bold text-2xl">Crea tu cuenta de empresa</h1>
      <p class="mt-1 leading-tight">Después podrás publicar tu primera oferta</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'mt-6'}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div>
          <label class="block text-light-dark">Nombre</label>
          <%= f.text_field :display_name, autofocus: true, class: 'w-full px-4 py-3 rounded-lg bg-gray-100 mt-2 border focus:border-primary focus:bg-white focus:outline-none' %>
        </div>
        <div class="mt-4">
          <label class="block text-light-dark">Email</label>
          <%= f.email_field :email, autocomplete: "email", class: 'w-full px-4 py-3 rounded-lg bg-gray-100 mt-2 border focus:border-primary focus:bg-white focus:outline-none' %>
        </div>
        <div class="mt-4">
          <label class="block text-light-dark">Contraseña <em>(<%= @minimum_password_length %> caracteres mínimos)</em></label>
          <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-4 py-3 rounded-lg bg-gray-100 mt-2 border focus:border-primary focus:bg-white focus:outline-none' %>
        </div>
        <div class="mt-4">
          <label class="block text-light-dark">Confirmar contraseña</label>
          <%= f.password_field :password_confirmation, autocomplete: "current-password", class: 'w-full px-4 py-3 rounded-lg bg-gray-100 mt-2 border focus:border-primary focus:bg-white focus:outline-none' %>
        </div>
        <%= f.submit "Crear cuenta", class: 'w-full block bg-primary hover:bg-dark-primary focus:bg-primary text-white font-semibold rounded-lg px-4 py-3 mt-6' %>
      <% end %>

      <hr class="my-6 border-gray-300 w-full">

      <%= button_to account_google_oauth2_omniauth_authorize_path, method: :post, data: {turbo: "false"}, class: 'w-full block bg-white hover:bg-gray-100 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-4 py-3 border border-gray-300' do %>
        <div class="flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="w-6 h-6" viewBox="0 0 48 48"><defs><path id="a" d="M44.5 20H24v8.5h11.8C34.7 33.9 30.1 37 24 37c-7.2 0-13-5.8-13-13s5.8-13 13-13c3.1 0 5.9 1.1 8.1 2.9l6.4-6.4C34.6 4.1 29.6 2 24 2 11.8 2 2 11.8 2 24s9.8 22 22 22c11 0 21-8 21-22 0-1.3-.2-2.7-.5-4z"/></defs><clipPath id="b"><use xlink:href="#a" overflow="visible"/></clipPath><path clip-path="url(#b)" fill="#FBBC05" d="M0 37V11l17 13z"/><path clip-path="url(#b)" fill="#EA4335" d="M0 11l17 13 7-6.1L48 14V0H0z"/><path clip-path="url(#b)" fill="#34A853" d="M0 37l30-23 7.9 1L48 0v48H0z"/><path clip-path="url(#b)" fill="#4285F4" d="M48 48L17 24l-4-3 35-10z"/></svg>
          <span class="ml-4">Inicia sesión con Google</span>
        </div>
      <% end %>

      <p class="mt-8">¿Ya tienes una cuenta? <%= link_to "¡Inicia sesión!", new_session_path(resource_name), class: "text-primary hover:text-dark-primary font-semibold" %></p>
    </div>
  </div>
</section>