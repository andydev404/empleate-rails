<section class="flex flex-col md:flex-row h-screen items-center">

  <div class="bg-primary hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
    <img src="https://images.pexels.com/photos/6231722/pexels-photo-6231722.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="" class="w-full h-full object-cover">
  </div>

  <div class="bg-white w-full md:max-w-md lg:max-w-full md:mx-auto md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12 flex items-center justify-center">
    <div class="w-full h-100">
      <h1 class="font-bold text-2xl">¿Olvidaste tu contraseña?</h1>
      <p class="mt-1 leading-tight">Te enviaremos un enlace para generar una nueva contraseña.</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'mt-6', method: :post}) do |f| %>
        <div>
          <label class="block text-light-dark">Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-4 py-3 rounded-lg bg-gray-100 mt-2 border focus:border-primary focus:bg-white focus:outline-none' %>
        </div>
        <%= f.submit "Envíar", class: 'w-full block bg-primary hover:bg-dark-primary focus:bg-primary text-white font-semibold rounded-lg px-4 py-3 mt-6' %>
      <% end %>

      <p class="mt-8">¿Ya tienes una cuenta? <%= link_to "¡Inicia sesión!", new_session_path(resource_name), class: "text-primary hover:text-dark-primary font-semibold" %></p>
    </div>
  </div>
</section>